<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:layout_editor_absoluteY="81dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg">

        <Button
            android:id="@+id/btnSalvarReceita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"
            android:gravity="right"
            android:text="@string/Botao"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/scrollView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.github.florent37.materialtextfield.MaterialTextField
            android:id="@+id/materialTextField_data"
            android:layout_width="384dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSalvarReceita"
            app:mtf_image="@drawable/icon_senha"
            app:mtf_labelColor="@android:color/black">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/data"
                android:textColor="@android:color/black"
                android:textSize="15sp" />
        </com.github.florent37.materialtextfield.MaterialTextField>

        <com.github.florent37.materialtextfield.MaterialTextField
            android:id="@+id/materialTextField_Descricao"
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/materialTextField_data"
            app:mtf_image="@drawable/icon_senha"
            app:mtf_labelColor="@android:color/black"
            tools:layout_editor_absoluteX="0dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descrição"
                android:textColor="@android:color/black"
                android:textSize="15sp" />
        </com.github.florent37.materialtextfield.MaterialTextField>

        <com.github.florent37.materialtextfield.MaterialTextField
            android:id="@+id/materialTextField_valor"
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:drawableLeft="@drawable/icon_lupa"
            app:layout_constraintTop_toBottomOf="@+id/materialTextField_Descricao"
            app:mtf_image="@drawable/icon_senha"
            app:mtf_labelColor="@android:color/black"
            tools:layout_editor_absoluteX="0dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Valor"
                android:textColor="@android:color/black"
                android:textSize="15sp" />
        </com.github.florent37.materialtextfield.MaterialTextField>
    </android.support.constraint.ConstraintLayout>
</ScrollView>