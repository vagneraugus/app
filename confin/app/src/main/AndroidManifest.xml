<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.confin.confin">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="Home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Receitas"
            android:label="@string/title_activity_receitas"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Despesas"
            android:label="@string/title_activity_despesas"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Categorias"
            android:label="Categorias"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Login"
            android:screenOrientation="portrait"
            android:configChanges="orientation"
            android:label="Login" />
        <activity android:name=".SplashScreen"
            android:screenOrientation="portrait"
            android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Cadastro_Inicial"
            android:label="Cadastrar-se"
            android:screenOrientation="portrait"
            android:configChanges="orientation">
        </activity>
        <activity android:name=".Condicao_pgto" />
        <activity android:name=".Cadastro_cartao" />
        <activity android:name=".SubCategoria" />
        <activity android:name=".Resumo" />
        <activity android:name=".Resumo_data_vencto_cartao" />
        <activity android:name=".ResetSenha"></activity>
    </application>

</manifest>